{
  extends: ['config:base', 'schedule:earlyMondays'],
  dependencyDashboardApproval: true,
  lockFileMaintenance: { enabled: true },
  regexManagers: [
    {
      fileMatch: ['^download-urls.yaml$'],
      matchStrings: [
        '.*: https://github.com/(?<depName>.*?)/releases/download/v(?<currentValue>.*?)/chart-releaser_(?<currentValue>.*?)_linux_amd64.tar.gz',
      ],
      depTypeTemplate: 'github-releases',
    },
  ],
  packageRules: [
    /** Automerge the dev dependency */
    {
      matchDepTypes: ['devDependencies'],
      automerge: true,
    },
    /** Group and automerge the patch and the minor */
    {
      matchUpdateTypes: ['patch'],
      groupName: 'all patch versions',
      automerge: true,
    },
    {
      matchUpdateTypes: ['minor'],
      groupName: 'all minor versions',
      automerge: true,
    },
  ],
}
